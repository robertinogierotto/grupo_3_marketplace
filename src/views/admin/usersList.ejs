<!DOCTYPE html>

<html lang="en">
<!------------------------------------------ head ---------------------------------------------------->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%- include('../partials/head') %>

    <body>
        <!------------------------------------------ header -------------------------------------------------->
        <%- include('../partials/header') %>
            <!------------------------------------------ main ---------------------------------------------------->

            <main class="productList">
                <table class="table table-responsive table-dark table-striped table-hover align-middle ">
                    <tr>
                        <th>Imagen</th>
                        <th>Nombre del Usuario</th>
                        <th class="movile">Email</th>
                        <th>Permisos</th>
                        <th>Acciones</th>
                    </tr>
                    <% users.forEach(user => { %>
                    <tr>
                        <td><img class="img-tb" src="/images/user/<%= user.image %>" alt=""></td>
                        <td><%= user.first_name + ' ' + user.last_name %></td>
                        <td class="movile"><%= user.email %></td>
                        <td><%= user.category %></td>
                        <td>
                            <a href="#" class="btn btn-info">Admin</a>
							<form action="#" method="POST" class="d-inline form-delete">
								<button class="btn btn-danger" type="submit">Borrar</button>
							</form>
                        </td>
                    </tr>
                    <% }) %>
                </table>
            </main>

            <!------------------------------------------ footer ---------------------------------------------------->
            <%- include('../partials/footer') %>
    </body>

</html>